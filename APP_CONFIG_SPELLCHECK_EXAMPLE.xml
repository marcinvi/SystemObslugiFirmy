<!-- 
  ===============================================
  KONFIGURACJA SPRAWDZANIA PISOWNI
  ===============================================
  Dodaj tę sekcję do swojego pliku App.config
  ===============================================
-->

<?xml version="1.0" encoding="utf-8"?>
<configuration>
  
  <!-- Sekcja konfiguracji sprawdzania pisowni -->
  <appSettings>
    
    <!-- Włącz/wyłącz sprawdzanie pisowni globalnie -->
    <add key="SpellCheck_Enabled" value="true"/>
    
    <!-- Język słownika (np. pl_PL, en_US, de_DE) -->
    <add key="SpellCheck_Language" value="pl_PL"/>
    
    <!-- Ścieżka do plików słownika (puste = folder aplikacji) -->
    <add key="SpellCheck_DictionaryPath" value=""/>
    
    <!-- Maksymalna liczba sugestii -->
    <add key="SpellCheck_MaxSuggestions" value="10"/>
    
    <!-- Automatyczne podkreślanie błędów (tylko RichTextBox) -->
    <add key="SpellCheck_HighlightErrors" value="true"/>
    
    <!-- Kolor podkreślenia błędów (Red, Blue, Green, itp.) -->
    <add key="SpellCheck_ErrorColor" value="Red"/>
    
    <!-- Włącz menu kontekstowe -->
    <add key="SpellCheck_ContextMenu" value="true"/>
    
    <!-- Zapisuj słownik własny automatycznie -->
    <add key="SpellCheck_AutoSaveCustomDictionary" value="true"/>
    
    <!-- Ścieżka do słownika własnego (puste = custom_dictionary.txt w folderze aplikacji) -->
    <add key="SpellCheck_CustomDictionaryPath" value=""/>
    
    <!-- Ignoruj słowa krótsze niż (liczba znaków) -->
    <add key="SpellCheck_MinWordLength" value="2"/>
    
    <!-- Ignoruj słowa pisane wielkimi literami -->
    <add key="SpellCheck_IgnoreAllCaps" value="true"/>
    
    <!-- Ignoruj słowa zawierające cyfry -->
    <add key="SpellCheck_IgnoreWordsWithNumbers" value="true"/>
    
    <!-- Loguj błędy sprawdzania pisowni -->
    <add key="SpellCheck_EnableLogging" value="false"/>
    
  </appSettings>
  
</configuration>

