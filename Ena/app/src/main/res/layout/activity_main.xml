<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ena Mobile"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtBaseUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="API: brak konfiguracji"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtPhoneIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Telefon IP: -"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtPairCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Kod parowania: -"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtPairingHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:text="Hej! Jestem gotowy do pracy! Zeskanuj kod z aplikacji na Windows :)"
        android:textColor="#0D47A1"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnScanQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Skanuj QR z komputera" />

    <Button
        android:id="@+id/btnResetPairing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rozłącz / Reset parowania" />

    <Button
        android:id="@+id/btnWarehouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Magazyn - zwroty" />

    <Button
        android:id="@+id/btnSales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Handlowiec - moje zwroty" />

    <Button
        android:id="@+id/btnSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Podsumowanie zwrotów" />

    <Button
        android:id="@+id/btnMessages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Wiadomości" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ustawienia API" />
</LinearLayout>
