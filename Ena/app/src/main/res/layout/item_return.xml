<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <View
            android:id="@+id/statusStrip"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="#CCCCCC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            tools:text="ZWROT #1024"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#222222"
            app:layout_constraintStart_toEndOf="@+id/statusStrip"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            tools:text="12.05 14:30"
            android:textSize="12sp"
            android:textColor="#888888"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtRef"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            tools:text="Karta Graficzna RTX 3060 12GB"
            android:textSize="14sp"
            android:textColor="#555555"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtRef"
            app:layout_constraintTop_toBottomOf="@+id/txtRef" />

        <TextView
            android:id="@+id/txtBuyer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="Jan Kowalski"
            android:textSize="13sp"
            android:textColor="#777777"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtRef"
            app:layout_constraintTop_toBottomOf="@+id/txtProduct" />

        <TextView
            android:id="@+id/txtStatusAllegro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Status: Dostarczone"
            android:textSize="12sp"
            android:textColor="#6D6D6D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtRef"
            app:layout_constraintTop_toBottomOf="@+id/txtBuyer" />

        <FrameLayout
            android:id="@+id/decisionContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bg_spinner"
            android:backgroundTint="#E0F2F1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtRef"
            app:layout_constraintTop_toBottomOf="@+id/txtStatusAllegro">

            <TextView
                android:id="@+id/txtAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="NA PÓŁKĘ (NOWY)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#00695C"
                android:textAllCaps="true"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
