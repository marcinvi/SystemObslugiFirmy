<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editResendDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data ponownej wysyłki (domyślnie dzisiaj)"
        android:inputType="text" />

    <Spinner
        android:id="@+id/spinnerResendCarrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/editResendCarrierOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Inny przewoźnik"
        android:inputType="text"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editResendWaybill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Numer listu przewozowego"
        android:inputType="text" />
</LinearLayout>
